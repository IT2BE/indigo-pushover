<?xml version="1.0"?>
<PluginConfig>
	<Field type="checkbox" id="enabled" default="no">
		<Label>Enable Push Notifications</Label>
	</Field>
	<Field id="applicationapikeylabel" type="label" fontSize="small" fontColor="darkgray">
		<Label>You can use more than one API Key by adding additional keys and separate each of them with a comma.\n
        When you want to add a name for the key separate them with a colon e.g. name1:key1,name2:key2</Label>
	</Field>
	<Field id="applicationapikey" type="textfield" default="">
		<Label>App API Keys:</Label>
	</Field>
  	<Field id="userkey" type="textfield" default="">
		<Label>User Key:</Label>
	</Field>
	<Field id="username" type="textfield" default="">
		<Label>User Name:</Label>
	</Field>
</PluginConfig>
